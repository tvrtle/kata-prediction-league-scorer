{
  "name": "tvrtle/kata-prediction-league-scorer",
  "description": "A simple football prediction scoring kata using PHP and Pest.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "pestphp/pest": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "predict": "php predict.php",
    "test": "pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
